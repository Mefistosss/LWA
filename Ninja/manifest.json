{
	"manifest_version": 2,
	"name": "Ninja",
	"description": "Life without advertising",
	"version": "1.1.0",

	"options_page": "options/options.html",

	"background" : {
		"page": "background.html"
	},

	"icons": {
		"128": "icons/NinjaToy_128x128.png",
		"48": "icons/NinjaToy_48x48.png",
		"16": "icons/NinjaToy_16x16.png"
	},
	
    "browser_action": {
	    "default_title": "Ninja",
	    "default_icon": "icons/NinjaToy_48x48.png",
	    "default_popup": "popup/popup.html"
    },
    
    "permissions": [
    	"tabs",
    	"http://filmix.net/",
    	"http://www.torrentino.com/"
	]
}